Algoritmo "Exercício 1"
//Exercício para receber e imprimir informações

Var
   Nome:CARACTERE
   Peso:REAL
   Altura:REAL

Inicio
   escreva("Digite o nome:")
   leia(Nome)
   escreva("Digite a altura:")
   leia(Altura)
   escreva("Digite o peso:")
   leia(Peso)
   escreva(Nome ,"Altura:", Altura,"Peso:",Peso)
Fimalgoritmo